            <div class="userCmnSet resetValue editBox">
                <table class="table table-bordered table-striped" id="tbluserlist">
                    <thead>
                        <tr>
                            <th></th>
                            <th>ユーザ名</th>
                            <th>Login_ID</th>
                            <th>ステータス</th>
                            <th>登録日</th>
                        </tr>
                    </thead>
                    <tbody></tbody>
                </table>
            </div>
        </div>
    </div>
</div>