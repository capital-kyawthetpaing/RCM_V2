
@{
    ViewBag.Title = "ShopList";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div id="CmnContents">
    <div id="ComBlock">
        <div class="setListBox inlineSet iconSet iconList">
            <h1>ショップ一覧</h1>
            <!-- User search -->
            <div class="userCmnSet resetValue searchBox">
                <h2>ショップ検索</h2>
                <dl>
                    <dt>ショップ名</dt>
                    <dd> <input type="text" id="ShopName" /></dd>
                    <dt>出店モール</dt>
                    <dd><select id="ddlMall"></select></dd>
                    <dt>ステータス</dt>
                    <dd>
                        <input type="radio" id="RadioButton1" name="status" value="1" /><span> 有効</span>
                        <input type="radio" id="RadioButton2" name="status" Value="0" /><span> 無効</span>
                        <input type="radio" id="RadioButton3" name="status" value="null" checked /><span> 全て</span>
                    </dd>
                    <dd><input type="button" id="btnSearch" value="検索"></dd>
                </dl>
            </div>

            <div class="operationBtn">
                <p>
                    <input type="button" value="ショップを追加する" />
                </p>
            </div>

            <div class="userCmnSet resetValue editBox">
                <table class="table table-bordered table-striped" id="ShopList">
                    <thead>
                        <tr>
                            <th></th>
                            <th>ショップ名</th>
                            <th>出店モール</th>
                            <th>ステータス</th>
                        </tr>
                    </thead>
                    <tbody></tbody>
                </table>
            </div>
        </div>
    </div>
</div>

@section Scripts
{
    <script type="text/javascript">
        $(document).ready(function () {
            BindMall();
            Search();

            $("#btnSearch").click(function () {
                Search();
            })
        });

        function Search() {
            var obj = {
                    ShopName: $("#ShopName").val(),
                    DeleteFlag: $("input[name='status']:checked").val()
                };
                var response = CalltoApiController('@Url.Action("Shop_Select", "api/ShopApi")', obj);
                BindTable(response);
        }

        function BindMall() {
            var obj = {
                MallID: "",
            };
            var response = CalltoApiController('@Url.Action("Mall_Select", "api/MallApi")', obj);
            var items = JSON.parse(response);

            $("#ddlMall").empty();

            $.each(items, function (i, item) {
                $("#ddlMall").append(
                    $('<option></option>').val(item.MallID).html(item.MallName));
            });
        }

        function BindTable(response) {
            table = $('#ShopList').DataTable({
                data: JSON.parse(response),
                destroy: true,
                "dataSrc": " ",
                "searching":false,
                "columns": [
                    { "data": "" },
                    { "data": "ShopName"},
                    { "data": "MallName"},
                    { "data": "Status"},
                ],
                "columnDefs": [
                    {
                    "targets": 0,
                    "data": "",
                    "render": function (data) {
                        return '<a href="#" class="btn btn-sm" style="border-color:black;">編集</a><a href="#" class="btn btn-sm" style="border-color:black;">デフォルト値設定</a><a href="#" class="btn btn-sm" style="border-color:black;">固定値設定</a>';
                        }
                    },
                ]
            });
        }

    </script>
}
